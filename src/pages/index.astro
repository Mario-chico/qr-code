---
import Layout from "../Layouts/Layout.astro"
import Article from "../components/Article.astro"
import Info from "../components/Info.astro"
import Text from "../components/Text.astro"
import User from "../components/User.astro"
import Blogimage from "../svg/blogimage.astro"
---

<Layout pageName="Blog Preview Card">
		<h1>Astro</h1>
		<Article class="blogpre">
			<Blogimage class="svgimg"/>
			<Text>
				<Info/>
				<h2 slot="title">Dominando Astro</h2>
        <p slot="paragraph">These languages are the backbone of every website, defining structure, content, and presentation. </p>
			</Text>
			<User/>
		</Article>
</Layout>

<style is:global>
	html{
		background-color: #F4D04E;
		text-align: left;
	}
	h2{
		color: #1F314F;
		font-weight: 700;
	}
	p{
		color: #7D889E;
		font-weight: 200;
		font-size: calc(13px + 0.24vw);
		line-height: 1.5;
	}
	p, h2{
		margin: 0;
	}
	div{
		width: auto;
		margin-block: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 12px;
	}
	img{
		border-radius: 15px;
	}
	.svgimg{
		border-radius: 15px;
		width: 279px;
	}
	.blogpre{
    width: 279px;
	}
	@media screen and (min-width: 429px) {
		.blogpre{
			width: 336px;
		}
		.svgimg{
			width: 336px;
		}
	}
</style>