---
import Layout from "../Layouts/Layout.astro"
import Article from "../components/Article.astro"
import QR from "../components/QR.astro"
import Text from "../components/Text.astro"
---

<Layout pageName="Blog Preview Card">
		<h1>Astro</h1>
		<Article class="qr">
			<QR/>
			<Text>
        <h2 slot="title">Improve your front-end skills by building projects</h2>
        <p slot="paragraph">Scan the QR code to visit Frontend Mentor and take your coding skills to the next level</p>
      </Text>
		</Article>
</Layout>

<style is:global>
  body{
    background-color: #D5E1EF;;
  }
  .qr{
    background-color: white;
    height: 497px;
    width: 320px;
  }
</style>